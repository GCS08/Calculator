<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Calculator.ViewModels"
             xmlns:m="clr-namespace:Calculator.Models"
             x:Class="Calculator.MainPage"
             x:DataType="vm:MainPageVM">

    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*">
        <Entry Text="{Binding FirstNumber}" Keyboard="Numeric" Placeholder="{x:Static m:Strings.FirstNumberPrompt }" Margin="5" HorizontalTextAlignment="Center"/>
        <Entry Text="{Binding SecondNumber}" Keyboard="Numeric" Grid.Column="1" Placeholder="{x:Static m:Strings.SecondNumberPrompt}" Margin="5" HorizontalTextAlignment="Center"/>
        <Button Command="{Binding AddCommand}" Grid.Row="1" Grid.Column="0" Text="{x:Static m:Strings.AddText}" Margin="5" Grid.ColumnSpan="1"/>
        <Button Command="{Binding AddCommand}" Grid.Row="1" Grid.Column="1" Text="{x:Static m:Strings.AddText}" Margin="5" Grid.ColumnSpan="1"/>
        <Label Grid.Row="2" Text="{Binding Result}" Grid.ColumnSpan="2" Margin="5" HorizontalTextAlignment="Center"/>
    </Grid>

</ContentPage>
